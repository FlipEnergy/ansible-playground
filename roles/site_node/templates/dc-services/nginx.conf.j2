user www-data;
worker_processes 4;
pid /run/nginx.pid;

events {
    worker_connections 1024;
}

http {
        ##
        # Basic Settings
        ##

        sendfile on;
        tcp_nopush on;
        tcp_nodelay on;
        keepalive_requests 300;
        keepalive_timeout 1h;
        types_hash_max_size 2048;
        # server_tokens off;

        # server_names_hash_bucket_size 64;
        # server_name_in_redirect off;

        include /etc/nginx/mime.types;
        default_type application/octet-stream;

        ##
        # Logging Settings
        ##

        log_format upstream_time '$remote_addr - $remote_user [$time_local] '
                             '"$request" $status $body_bytes_sent '
                             '"$http_referer" "$http_user_agent"'
                             'rt=$request_time uct="$upstream_connect_time" uht="$upstream_header_time" urt="$upstream_response_time"';

        access_log /var/log/nginx/access.log;
        error_log /var/log/nginx/error.log;

        ##
        # Gzip Settings
        ##

        gzip on;

        # gzip_vary on;
        # gzip_proxied any;
        # gzip_comp_level 6;
        # gzip_buffers 16 8k;
        # gzip_http_version 1.1;
        # gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;

        ##
        # Request limiting Settings
        ##

        limit_req_zone $binary_remote_addr zone=one:10m rate=1r/s;

        ##
        # File Upload size limiting Settings
        ##
        client_max_body_size 500M;

        ##
        # Virtual Host Configs
        ##

        # Redirect 80 -> 443 (External)
        server {
                listen      0.0.0.0:80 default_server;
                server_name _;

                return 301 https://$host$request_uri;
        }
}

stream {
        upstream docker-influxdb {
                server influxdb:8086 max_fails=3 fail_timeout=5s;
        }
        # HTTPS traffic (External)
        server {
                listen     0.0.0.0:443 ssl;
                proxy_pass docker-influxdb;

                ##
                # SSL Settings
                ##

                ssl_protocols TLSv1.2 TLSv1.3; # Dropping SSLv3, ref: POODLE
                ssl_session_cache   shared:SSL:10m;
                ssl_session_timeout 24h;
                ssl_handshake_timeout 30s;
                ssl_certificate     /etc/nginx/ssl/fullchain.pem;
                ssl_certificate_key /etc/nginx/ssl/privkey.pem;
        }
}
